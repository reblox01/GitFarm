// This is your Prisma schema file
// GitFarm - GitHub Contribution Web App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ========================
// User & Authentication
// ========================

model User {
  id                String    @id @default(cuid())
  githubId          String?   @unique
  email             String    @unique
  password          String? // For email/password auth
  name              String?
  avatarUrl         String?
  role              Role      @default(USER)
  credits           Int       @default(0)
  stripeCustomerId  String?   @unique
  emailVerified     DateTime? // null = not verified
  lastCreditGrant   DateTime?
  verificationToken String?   @unique
  resetToken        String?   @unique
  resetTokenExpires DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  accounts     Account[]
  sessions     Session[]
  subscription UserSubscription?
  tasks        Task[]
  commitJobs   CommitJob[]
  payments     PaymentTransaction[]

  @@index([githubId])
  @@index([email])
}

enum Role {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================
// Subscription & Plans
// ========================

model Plan {
  id              String   @id @default(cuid())
  name            String   @unique
  type            PlanType @default(MONTHLY)
  price           Int // in cents
  credits         Int      @default(0)
  stripeProductId String?
  lemonProductId  String?
  isDefault       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  features            PlanFeature[]
  subscriptions       UserSubscription[]
  paymentTransactions PaymentTransaction[]
}

enum PlanType {
  MONTHLY
  ONE_TIME
}

model Feature {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "daily_tasks", "custom_patterns"
  name        String
  description String?
  createdAt   DateTime @default(now())

  // Relations
  plans PlanFeature[]
}

model PlanFeature {
  id         String @id @default(cuid())
  planId     String
  featureId  String
  limitValue Int? // null = unlimited

  // Relations
  plan    Plan    @relation(fields: [planId], references: [id], onDelete: Cascade)
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@unique([planId, featureId])
}

model UserSubscription {
  id                     String             @id @default(cuid())
  userId                 String             @unique
  planId                 String
  providerSubscriptionId String?
  provider               PaymentProvider    @default(STRIPE)
  status                 SubscriptionStatus @default(ACTIVE)
  currentPeriodEnd       DateTime?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
}

enum PaymentProvider {
  STRIPE
  LEMON_SQUEEZY
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
  TRIAL
}

// ========================
// Site Settings (Admin)
// ========================

model SiteSettings {
  id                  String          @id @default(cuid())
  appName             String          @default("GitFarm")
  supportEmail        String          @default("support@gitfarm.com")
  paymentProvider     PaymentProvider @default(STRIPE)
  freeCreditsOnVerify Int             @default(100) // Credits given on email verification
  requireEmailVerify  Boolean         @default(true)
  config              Json? // Additional settings
  updatedAt           DateTime        @updatedAt
}

// ========================
// Tasks & Commit Jobs
// ========================

model Task {
  id           String           @id @default(cuid())
  userId       String
  name         String
  // repositories Format: [{ fullName: string, weight?: number }]
  repositories Json
  distribution TaskDistribution @default(RANDOM)
  schedule     String // cron expression
  pattern      Json // contribution pattern data
  active       Boolean          @default(true)
  creditLimit  Int? // null = no limit ("stop when...")
  creditsUsed  Int              @default(0)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs TaskLog[]

  @@index([userId])
}

enum TaskDistribution {
  RANDOM
  EQUAL
}

enum LogStatus {
  SUCCESS
  FAILED
  PENDING
  RUNNING
}

model TaskLog {
  id              String    @id @default(cuid())
  taskId          String
  status          LogStatus
  message         String?
  details         Json? // Array of step objects: { step: string, status: 'pending'|'running'|'done'|'error', timestamp: string }
  commitsCount    Int       @default(0)
  creditsDeducted Int       @default(0)
  repository      String?
  timestamp       DateTime  @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([timestamp])
}

model CommitJob {
  id               String    @id @default(cuid())
  userId           String
  status           JobStatus @default(PENDING)
  totalCommits     Int
  completedCommits Int       @default(0)
  pattern          Json // contribution pattern data
  repositoryUrl    String?
  errorMessage     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  completedAt      DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

// ========================
// Payments
// ========================

model PaymentTransaction {
  id                String          @id @default(cuid())
  userId            String
  amount            Int // in cents
  currency          String          @default("usd")
  status            PaymentStatus   @default(PENDING)
  provider          PaymentProvider @default(STRIPE)
  providerPaymentId String? // Stripe payment intent ID or Lemon order ID
  planId            String?
  metadata          Json? // Additional payment details
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan? @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Invitation {
  id        String   @id @default(cuid())
  email     String
  role      Role     @default(USER)
  token     String   @unique
  expires   DateTime
  inviterId String
  createdAt DateTime @default(now())

  @@unique([email, token])
}
